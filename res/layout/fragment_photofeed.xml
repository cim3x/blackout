<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivGalleryView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_ban" />

    <LinearLayout
        android:id="@+id/bGalleryLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/customTransBg"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/tvGalleryLegend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_menu_legend"
            android:textColor="@color/customWhite"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="@string/legendary"/>
        
    </LinearLayout>


    <TextView
        android:id="@+id/tvGalleryInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/customTransBg"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textSize="16sp"
        android:textColor="@color/customWhite" />

</RelativeLayout>
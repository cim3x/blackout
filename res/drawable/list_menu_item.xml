<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/customAb"
                android:endColor="@color/customTransBg"
                android:angle="0"/>
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/customAb"
                android:endColor="@color/customTransBg"
                android:angle="0"/>
        </shape>
    </item>
    <item android:state_activated="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/customAb"
                android:centerColor="@color/customAb"
                android:endColor="@color/customAb"
                android:angle="0"/>
        </shape>
    </item>

</selector>
